{
    "name": "@tonysamperi/crypto",
    "version": "1.0.0",
    "author": "Tony Samperi",
    "description": "Modern tree-shakeable TypeScript version of crypto-js",
    "type": "module",
    "typings": "./dist/types/index.d.cts",
    "main": "./dist/cjs/index.cjs",
    "module": "./dist/esm/index.js",
    "unpkg": "./dist/cjs/index.cjs",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/types/index.d.cts",
                "default": "./dist/cjs/index.cjs"
            },
            "browser": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/esm/index.js"
            }
        },
        "./package.json": "./package.json"
    },
    "sideEffects": false,
    "files": [
        "dist/**",
        "!dist/raw-esm/**",
        "README.md"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "npm run clean && NODE_ENV=production node build.config.mjs",
        "clean": "rimraf dist",
        "lint": "eslint && tsc --noEmit",
        "publish:beta": "npm publish --tag beta",
        "publish:next": "npm publish --tag next",
        "test": "jest"
    },
    "homepage": "https://tonysamperi.github.io/crypto/",
    "license": "MIT",
    "keywords": [
        "crypto-js",
        "typescript",
        "sync-crypto",
        "crypto-ts",
        "crypto"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tonysamperi/crypto.git"
    },
    "devDependencies": {
        "@types/jest": "^29.5.4",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "esbuild": "^0.25.1",
        "eslint": "^9.22.0",
        "eslint-plugin-import": "^2.31.0",
        "jest": "^29.6.4",
        "rimraf": "^5.0.7",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "tslib": "^2.0.0",
        "typescript": "~5.3.0",
        "typescript-eslint": "^8.26.1"
    },
    "peerDependencies": {
        "@types/crypto-js": "^4",
        "crypto-js": "^4.2.0"
    },
    "packageManager": "yarn@4.7.0"
}
